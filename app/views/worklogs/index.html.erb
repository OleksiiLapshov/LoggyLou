<% content_for :title, "Worklogs" %>

<div id="worklogs" class="form-card space-y-6">
  <h1 class="h1-style">Worklogs</h1>
  <% @worklogs.each do |worklog| %>
    <%= render worklog %>
    <p class="mt-4">
      <%= link_to "View worklog", worklog, class: "button-secondary" %> | 
      <%= link_to "Edit worklog", edit_worklog_path(worklog), class: "button" %>
    </p>
    <hr>
  <% end %>

  <div class="mt-6">
    <%= link_to "New worklog", new_worklog_path, class: "button-success" %>
  </div>
</div>



