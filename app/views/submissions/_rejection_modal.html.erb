<div data-controller="modal">
  
  <button type="button" 
          data-action="modal#open"
          class="button-danger">
    Reject
  </button>

  <dialog data-modal-target="dialog" 
          class="m-auto backdrop:bg-gray-900/50 rounded-xl shadow-xl p-0 bg-transparent open:animate-in open:fade-in open:zoom-in-95">
    
    <div class="bg-white dark:bg-zinc-900 p-6 w-96 rounded-xl border border-zinc-200 dark:border-zinc-700">
      <h2 class="text-lg font-bold mb-4 text-gray-900 dark:text-zinc-200">Reject Submission</h2>
      
      <%= form_with url: reject_submission_path(submission), method: :patch, data: { turbo_frame: "_top" } do |f| %>
        
        <div class="mb-4">
          <%= f.label :note, "Note", class: "block mb-2 font-medium text-sm text-gray-700 dark:text-gray-300" %>
          <%= f.text_area :note, 
              required: true, 
              rows: 3, 
              placeholder: "e.g. Missing hours for Tuesday...",
              class: "w-full border border-gray-300 dark:border-zinc-600 rounded-lg p-2 bg-white dark:bg-zinc-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-red-500" %>
        </div>

        <div class="flex justify-end gap-2">
          <button type="button" 
                  data-action="modal#close" 
                  class="px-3 py-2 rounded-lg text-sm font-medium bg-gray-100 hover:bg-gray-200 dark:bg-zinc-700 dark:text-gray-200">
            Cancel
          </button>
          
          <%= f.submit "Confirm Rejection", class: "bg-red-600 text-white px-3 py-2 rounded-lg hover:bg-red-700 text-sm font-medium cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </dialog>
</div>