<% flash.each do |type, message| %>
  <div data-controller="toast"
       class="fixed top-5 right-5 z-50 flex items-center w-full max-w-xs p-4 mb-4 text-gray-500 bg-white rounded-lg shadow-lg dark:text-gray-400 dark:bg-zinc-800 border border-gray-100 dark:border-zinc-700 transform transition-all duration-500 translate-x-0 opacity-100">
    
    <% if type == "notice" %>
      <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 bg-green-50 border-green-500 text-green-700 dark:bg-teal-700/50 dark:text-zinc-100 rounded-lg">
        <%= heroicon "check", variant: :solid, options: { class: "w-5 h-5" } %>    </button>
      </div>
    <% else %>
       <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 bg-red-50 border-red-500 text-red-700 dark:bg-red-900/50 dark:text-zinc-100 rounded-lg">
        <%= heroicon "exclamation-triangle", variant: :solid, options: { class: "w-5 h-5" } %>    </button>
      </div>
    <% end %>

    <div class="ml-3 text-sm font-normal"><%= message %></div>
    
    <button type="button" data-action="toast#close" class="ml-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:bg-zinc-800 dark:hover:bg-zinc-700">
        <%= heroicon "x-mark", variant: :solid, options: { class: "w-5 h-5" } %>    </button>
  </div>
<% end %>